<%- include base/headerMobile.ejs %>
        <div class="main main-page">
            <div class="mask"></div>
            <div class="location clearfix">
                <h1><a href="/group/<%=result.groupID%>" title=""><%=result.groupName%></a></h1>
                <button type="button" id="joinBtn">+加入</button>
            </div> 
            <%if(result.posts.length > 0){%>
            <div class="chapter-col">
                <% result.posts.forEach(function(item) { %>
                <div class="chapter">
                    <h2 class="text-ellipsis"><a href="/topic/<%=item.postID%>" title=""><%-item.title%></a></h2>
                    <div class="chapter-info">
                        <span class="text-ellipsis"><a href="#?" title=""><%=item.nickname%></a></span>
                        <span class="cha-icon"></span>
                        <span class="text-ellipsis"><a href="/group/<%=result.groupID%>" title=""><%=result.groupName%></a></span>
                        <span class="cha-time"><%=item.createTime%></span>
                    </div>
                    <div class="chapter-text"><%-item.text%></div>
                    <div class="chapter-img clearfix">
                        <img src="images/chapter_03.png" alt="">
                        <img src="images/chapter_03.png" alt="">
                        <img src="images/chapter_03.png" alt="">
                   </div>
                </div>
                <% }); %>
            </div>
            <div class="page-turn">
                <button class="unCBtn">上一页</button>
                <span><%=result.currentPage%>/<%=result.pageCount%></span>
                <%if(result.pageCount == 1){%>
                <button type="button" class="unCBtn">下一页</button>
                <%}else{%>
                <button type="button">下一页</button>
                <%}%>
            </div> 
            <%}else{%>
                <div class="emptyPage">
                    星球空空，可以注水~~
                </div>
            <%}%> 
        </div>
<%- include base/baseJSMobile.ejs %>
        <script type="text/html" id="listtemplate">
            {{each posts as item i}}
                <div class="chapter">
                    <h2 class="text-ellipsis"><a href="/topic/{{item.postID}}" title="{{#item.title}}">{{#item.title}}</a></h2>
                    <div class="chapter-info">
                        <span class="text-ellipsis"><a href="#?" title="">{{item.nickname}}</a></span>
                        <span class="cha-icon"></span>
                        <span class="text-ellipsis"><a href="/group/{{groupID}}" title="">{{groupName}}</a></span>
                        <span class="cha-time">{{item.createTime}}</span>
                    </div>
                    <div class="chapter-text">{{#item.text}}</div>
                    <div class="chapter-img clearfix">
                        <img src="images/chapter_03.png" alt="">
                        <img src="images/chapter_03.png" alt="">
                        <img src="images/chapter_03.png" alt="">
                   </div>
                </div>
            {{/each}}
        </script>
        <script type="text/javascript">
            var planetDetail = {
                pre: $(".page-turn").find('button').first(),
                next: $(".page-turn").find('button').last(),
                page: $(".page-turn").find('span').eq(0),
                main: $(".chapter-col"),
                joinBtn: $("#joinBtn"),
                nav_logout: $("#nav-logout"),
                loading: $(".loading"),
                isjoin: 0,
                currentpage: 1,
                pageCount: 0,
                ClientData: function() {
                    this.currentpage = parseInt('<%=result.currentPage%>');
                    this.pageCount = parseInt('<%=result.pageCount%>');
                },
                getServerData: function(param, cb) {
                    $.getJSON("/api/getGroupPlanetShow", param,
                        function(data) {
                            cb(data);
                        });
                },
                getJoinPData: function(param, cb) {
                    $.getJSON("/api/joinPlant", param,
                        function(data) {
                            cb(data);
                        });
                },
                getJoinBtnVal: function(param, cb) {
                    $.getJSON("/api/isJoinP", param,
                        function(data) {
                            cb(data);
                        });
                },
                setJoinBtnVal: function() {
                    var self = this;
                    if (localStorage.getItem("userID") != null) {
                        self.getJoinBtnVal({
                            groupid: parseInt("<%=result.groupID%>"),
                            userid: localStorage.getItem("userID")
                        }, function(data) {
                            if (data.ret == 200 && data.data) {
                                if (data.data.code == 1) {
                                    self.joinBtn.text('+发帖');
                                    self.isjoin = 1; //已加入
                                } else {
                                    self.joinBtn.text('+加入');
                                    self.isjoin = 0; //未加入
                                }
                            }
                        });
                    }
                },
                bindEvent: function() {
                    var self = this;
                    self.nav_logout.on("touchend", function() {
                        self.joinBtn.text('+加入');
                    });
                    self.pre.on("touchend", function(event) {
                        event.preventDefault();
                        if (self.currentpage == 1) {
                            //sweetAlert('错误', '当前页是第一页', 'error');
                            return;
                        } else {
                            self.loading.show();
                            self.getServerData({
                                currentpage: self.currentpage - 1,
                                groupid: parseInt("<%=result.groupID%>")
                            }, function(data) {
                                if (data.ret == 200 && data.data && data.data.posts.length > 0) {
                                    self.currentpage -= 1;
                                    var compiled = template("listtemplate", data.data);
                                    self.main.html(compiled);
                                    self.page.text(data.data.currentPage + '/' + data.data.pageCount);
                                    self.loading.hide();
                                    self.next.removeClass('unCBtn');
                                    if (data.data.currentPage == 1) {
                                        self.pre.addClass('unCBtn');
                                    } 
                                    $(window).scrollTop(0);
                                }
                            });
                        }
                    });
                    self.next.on("touchend", function(event) {
                        event.preventDefault();
                        if (self.currentpage == self.pageCount) {
                            //sweetAlert('错误', '当前页是最后一页', 'error');
                            return;
                        } else {
                            self.loading.show();
                            self.getServerData({
                                currentpage: self.currentpage + 1,
                                groupid: parseInt("<%=result.groupID%>")
                            }, function(data) {
                                if (data.ret == 200 && data.data && data.data.posts.length > 0) {
                                    self.currentpage += 1;
                                    var compiled = template("listtemplate", data.data);
                                    self.main.html(compiled);
                                    self.page.text(data.data.currentPage + '/' + data.data.pageCount);
                                    self.loading.hide();
                                    self.pre.removeClass('unCBtn');
                                    if (data.data.currentPage == data.data.pageCount) {
                                        self.next.addClass('unCBtn');
                                    }
                                    $(window).scrollTop(0);
                                }
                            });
                        }
                    });
                    self.joinBtn.on("touchend", function(event) {
                        event.preventDefault();
                        if (localStorage.getItem("userID") != null) {
                            if (self.isjoin == 0) {
                                self.getJoinPData({
                                    groupid: parseInt("<%=result.groupID%>"),
                                    userid: localStorage.getItem("userID")
                                }, function(data) {
                                    console.log(data);
                                    if (data.ret == 200 && data.data && data.data.code == 1) {
                                        self.joinBtn.text('+发帖'); //加入成功
                                        self.isjoin = 1;
                                    }
                                });
                            }
                            if (self.isjoin == 1) {
                                window.location.href = '/post/<%=result.groupID%>';
                            }
                        } else {
                            window.location.href = '/login';
                        }
                    });
                },
                init: function() {
                    this.ClientData();
                    this.setJoinBtnVal();
                    this.bindEvent();
                }
            }
            planetDetail.init();
        </script>
