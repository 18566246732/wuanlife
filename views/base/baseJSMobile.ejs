    <script type = "text/javascript">
        var global = (function() {
            // 设置loading位置
            var setCenterLoadingDiv = function() {
                var loadingClientheight = parseInt($(".uil-default-css").css("height"));
                var loadingClientwidth = parseInt($(".uil-default-css").css("width"));
                var centerheight = ($(window).height() / 2 - (loadingClientheight / 2)) + 'px'
                var centerwidth = ($(window).width() / 2 - (loadingClientwidth / 2)) + 'px';
                $(".uil-default-css").attr('style', '-webkit-transform:scale(0.3);transform: scale(0.3);margin-top:' + centerheight + ';margin-left: ' + centerwidth + ';');
            };
            //设置侧栏切换按钮
            (function() {
                $(".navbar-toggle").on("touchend", function() {                   
                    var all = $(".all-wrapper");
                    if (all.hasClass('open')) {
                        all.removeClass('open').addClass('close');
                    } else{
                        all.removeClass('close').addClass('open');
                    }
                });
            })(); 
            //主栏遮罩
            (function(){
                $(".mask").on("touchend", function(e) {
                    //e.stopPropagation();
                    $(".all-wrapper").removeClass('open').addClass('close');
                    return false; //zepto return false 则会阻止事件冒泡以及默认操作
                });
            })();
            //ajax获取数据
            var getData =  function(url,param,cb){
                $.getJSON(url, param, function(data) {
                    cb(data);
                });
            };
            //ajax提交数据
            var subData = function(url,data,success){
                $.ajax({
                    type:"post",
                    url:url,
                    data:data,
                    success:function(d){
                        success(d);
                    },
                    error:function(x,h,r){
                        console && console.log(x, h, r);
                    }
                });
            };
            //设置主栏主内容容器高度
            var setMainHeight =  function(){
                var windowHeight = $(window).height();
                $('.all-wrapper').css('height', windowHeight);
            }
            //获取翻页页数
            var getPageNow = function(){
                var reg = /page=(\d+)/,
                    regMatch = reg.exec(location.search),
                    pageNow = regMatch === null ? 1:regMatch[1];
                return pageNow;
            };
            //翻页事件处理
            var pageTurning = function(pre,next,pageCount,updata){
                var self = this;
                var everPushed = false;
                var initialUrl = location.href;
                pre.on('touchend', function(event) {
                    event.preventDefault();
                    /* Act on the event */
                    var pageNow = global.getPageNow();
                    if (pageNow == 1) {
                        return;
                    } else{
                        pageNow--;
                        var newURL = location.pathname + '?page=' + pageNow;
                        history.pushState(null,'',newURL);
                        everPushed = true;
                        updata.apply(self,[]);
                    }
                });
                next.on('touchend', function(event) {
                    event.preventDefault();
                    /* Act on the event */
                    var pageNow = global.getPageNow();
                    if (pageNow == pageCount) {
                        return;
                    } else{
                        pageNow++;
                        var newURL = location.pathname + '?page=' + pageNow;
                        history.pushState(null,'',newURL);
                        everPushed = true;
                        updata.apply(self,[]);
                    }
                });
                //popstate
                $(window).on('popstate',  function(event) {
                    event.preventDefault();
                    /* Act on the event */
                    var onloadPop = !everPushed && location.href == initialUrl;
                    everPushed = true;
                    if (onloadPop) return;
                    updata.apply(self,[]);
                });
            };
            return {
                setCenterLoadingDiv: setCenterLoadingDiv,
                getData:getData,
                subData:subData,
                setMainHeight:setMainHeight,
                getPageNow:getPageNow,
                pageTurning:pageTurning
            }
        }());
    $(document).ready(function() {
        global.setCenterLoadingDiv();
        global.setMainHeight();
        $(window).resize(function(event) {
            global.setCenterLoadingDiv();
        });
    }); 
    </script>