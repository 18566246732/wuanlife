    <script type="text/javascript">
        var HJLoading = new HJLoading('/stylesheets/HJLoadingCSS');

        var global = (function($) {
            //下拉菜单
            $('[data-toggle="dropdown"]').on('mouseover',function(event) {
                event.preventDefault();
                /* Act on the event */
                $(this).addClass('open');
            });
            $('[data-toggle="dropdown"]').on('mouseleave',function(event) {
                event.preventDefault();
                /* Act on the event */
                $(this).removeClass('open');
            });
            
            //getJson获取数据
            var getData =  function(url,param,cb){
                $.getJSON(url, param, function(data) {
                    cb(data);
                });
            };
            //ajax提交数据
            var subData = function(url,data,success){
                $.ajax({
                    type:"post",
                    url:url,
                    data:data,
                    success:function(d){
                        if (typeof success === 'function') {
                            success(d);
                        }
                    },
                    error:function(x,h,r){
                        console && console.log(x, h, r);
                        console.dir(x)
                        hjnotice.error({message: JSON.parse(x.responseText).msg.msg})
                    }
                });
            };
            var putData = function(url, data, success) {
                $.ajax({
                    url: url,
                    type : "put",    // 此处发送的是PUT请求
                    data : data,
                    success : function(data){
                        if (typeof success === 'function') {
                            success(data);
                        }
                    },
                    dataType : "json",
                    error:function(x,h,r){
                        console && console.log(x, h, r);
                        console.dir(x)
                        hjnotice.error({message: JSON.parse(x.responseText).msg.msg})
                    }
                })
            };
            var deleteData = function(url, data, success) {
                $.ajax({
                    url: url,
                    type : "DELETE",    // 此处发送的是PUT请求
                    data : data,
                    success : function(data){
                        if (typeof success === 'function') {
                            success(data);
                        }
                    },
                    dataType : "json",
                    error:function(x,h,r){
                        console && console.log(x, h, r);
                        console.dir(x)
                        hjnotice.error({message: JSON.parse(x.responseText).msg.msg})
                    }
                })
            };
            /*获取get参数*/
            var getUrlParam = function(name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)"); //构造一个含有目标参数的正则表达式对象
                var r = window.location.search.substr(1).match(reg);  //匹配目标参数
                if (r != null) 
                    return unescape(r[2]); 
                return null; //返回参数值
            }; 


            //用于把用utf16编码的字符转换成实体字符，以供后台存储 
            var utf16toEntities = function(str){
                var patt=/[\ud800-\udbff][\udc00-\udfff]/g; // 检测utf16字符正则  
                str = str.replace(patt, function(char){  
                    var H, L, code;  
                    if (char.length===2) {  
                        H = char.charCodeAt(0); // 取出高位  
                        L = char.charCodeAt(1); // 取出低位  
                        code = (H - 0xD800) * 0x400 + 0x10000 + L - 0xDC00; // 转换算法  
                        return "&#" + code + ";";  
                    } else {  
                        return char;  
                    }  
                });  
                return str; 
            };
            return {
                getData:getData,
                subData:subData,
                putData:putData,
                deleteData:deleteData,
                getUrlParam: getUrlParam,
                utf16toEntities:utf16toEntities
            }
        }(jQuery));
    </script>
